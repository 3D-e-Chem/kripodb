{
  "swagger": "2.0",
  "info": {
    "title": "Kripo API",
    "description": "API to interact with Kripo fragment, fingerprint and similarity data files.",
    "version": "1.0.0"
  },
  "host": "{{ hostport }}",
  "schemes": [
    "{{ scheme }}"
  ],
  "basePath": "/kripo",
  "produces": [
    "application/json"
  ],
  "paths": {
    "/fragments/{fragment_id}/similar": {
      "get": {
        "summary": "Similar fragments",
        "description": "Retrieve fragments similar to query based on Kripo fingerprint. Hits are ordered by decreasing similarity score (this score ranges from 0, completely dissimilar, to 1, identical).\n",
        "x-swagger-router-controller": "kripodb.webservice.server",
        "operationId": "get_similar_fragments",
        "parameters": [
          {
            "name": "fragment_id",
            "in": "path",
            "description": "Query fragment identifier. e.g. 3j7u_NDP_frag24",
            "required": true,
            "type": "string"
          },
          {
            "name": "cutoff",
            "in": "query",
            "description": "Similarity score cutoff.",
            "required": false,
            "default": 0.45,
            "type": "number",
            "format": "double",
            "minimum": 0.45,
            "maximum": 1.00
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Maximum number of hits.",
            "required": false,
            "default": 1000,
            "type": "integer",
            "format": "int32",
            "minimum": 0,
            "maximum": 1000
          }
        ],
        "tags": [
          "Fragments"
        ],
        "responses": {
          "200": {
            "description": "An array of products",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Hit"
              }
            }
          },
          "default": {
            "description": "Unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/version": {
      "get": {
        "summary": "Version of webservice",
        "x-swagger-router-controller": "kripodb.webservice.server",
        "operationId": "get_version",
        "tags": ["Version"],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Version"
            }
          }
        }
      }
    },
    "/fragments" : {
      "get": {
        "summary": "Retrieve fragments",
        "x-swagger-router-controller": "kripodb.webservice.server",
        "operationId": "get_fragments",
        "parameters": [
          {
            "name": "fragment_ids",
            "in": "query",
            "description": "Filter by fragment identifiers. e.g. 3j7u_NDP_frag24",
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 0,
            "maxItems": 100
          },
          {
            "name": "pdb_codes",
            "in": "query",
            "description": "Filter by PDB identifier codes. e.g. 3j7u",
            "type": "array",
            "items": {
              "type": "string",
              "maxLength": 4,
              "minLength": 4
            },
            "minItems": 0,
            "maxItems": 450
          }
       ],
       "tags": [
          "Fragments"
       ],
       "responses": {
          "200": {
            "description": "Success",
            "schema": {
             "type": "array",
              "items": {
                "$ref": "#/definitions/Fragment"
              }
            }
          }
        }
      }
    },
    "/fragments/{fragment_id}.svg": {
      "get": {
        "summary": "2D drawing of fragment in SVG format",
        "x-swagger-router-controller": "kripodb.webservice.server",
        "operationId": "get_fragment_svg",
        "parameters": [
          {
            "name": "fragment_id",
            "in": "path",
            "description": "Query fragment identifier. e.g. 3j7u_NDP_frag24",
            "required": true,
            "type": "string"
          },
          {
            "name": "width",
            "in": "query",
            "required": false,
            "default": 400,
            "type": "integer",
            "format": "int32",
            "minimum": 0,
            "maximum": 10000
          },
          {
            "name": "height",
            "in": "query",
            "required": false,
            "default": 200,
            "type": "integer",
            "format": "int32",
            "minimum": 0,
            "maximum": 10000
          }
        ],
        "tags": [
          "Fragments"
        ],
        "produces": [
          "image/svg+xml"
        ],
        "responses": {
          "200": {
            "description": "SVG image"
          },
          "default": {
            "description": "Unexpected error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Fragment": {
      "type": "object",
      "properties": {
        "frag_id": {
          "type": "string",
          "description": "Fragment identifier"
        },
        "nr_r_groups": {
          "type": "integer"
        },
        "smiles": {
          "type": "string"
        },
        "pdb_code": {
          "type": "string"
        },
        "atom_codes": {
          "type": "string"
        },
        "het_code": {
          "type": "string"
        },
        "hash_code": {
          "type": "string"
        },
        "frag_nr": {
          "type": "integer"
        },
        "rowid": {
          "type": "integer"
        },
        "het_chain": {
          "type": "string"
        },
        "het_seq_nr": {
          "type": "integer"
        },
        "prot_chain": {
          "type": "string"
        },
        "uniprot_acc": {
          "type": "string"
        },
        "uniprot_name": {
          "type": "string"
        },
        "prot_name": {
          "type": "string"
        },
        "ec_number": {
          "type": "string"
        },
        "pdb_title": {
          "type": "string"
        },
        "mol": {
          "type": "string"
        }
      }
    },
    "Hit": {
      "type": "object",
      "properties": {
        "query_frag_id": {
          "type": "string",
          "description": "Query fragment identifier"
        },
        "hit_frag_id": {
          "type": "string",
          "description": "Hit fragment identifier"
        },
        "score": {
          "type": "number",
          "format": "double",
          "description": "Similarity score"
        }
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "fields": {
          "type": "string"
        }
      }
    },
    "Version": {
      "type": "object",
      "description": "Version response",
      "properties": {
        "version": {
          "type": "string",
          "description": "The semantic version"
        }
      }
    }
  }
}
